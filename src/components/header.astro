---
const { pathname } = Astro.url;
const links = [
  {
    title:"Home",
    url: "/",
    isActive: pathname === "/"
  },
  {
    title:"Blog",
    url: "/blog",
    isActive: pathname.startsWith("/blog")
  },
  {
    title:"Bio",
    url: "/bio",
    isActive: pathname.startsWith("/bio")
  },
]
---
<ul class="w-[calc(100%-2rem)] md:w-auto fixed bottom-4 md:bottom-auto md:top-4 left-4 md:left-auto md:right-4 flex items-center justify-evenly md:justify-end gap-4 px-8 py-4 border dark:border-stone-700 border-gray-300 dark:bg-stone-900 bg-gray-100 rounded-full">
  {pathname !== "/" && (
    <li>
      <button onclick="history.back()">&LeftArrow; Back</button>
    </li>
  )}
  {links?.map(({title, url, isActive}) => (
    <li>
      <a href={url} data-page-active={isActive.toString()} class="social data-[page-active=true]:underline">{title}</a>
    </li>
  ))}
</ul>